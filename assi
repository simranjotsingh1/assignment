<html>
<head>
<meta charset="utf-8">
<title>Show letter grade</title>
<script>

do {
        var marks = prompt("Enter the marks from 0 through 100 :" );
        marks = parseFloat(marks);

if(marks >=88 && marks<=100)
{
alert("Number grade " + marks + "\n \n" + "Letter grade = A");
}
   else if(marks >=80 && marks<=87)
{
alert("Number grade " + marks + "\n \n" + "Letter grade = B");
}
else if(marks >=68 && marks<=79)
{
alert("Number grade " + marks + "\n \n" + "Letter grade = C");
}
else if(marks >=60 && marks<=67)
{
alert("Number grade " + marks + "\n \n" + "Letter grade = D");
}
 else if(marks >=0 && marks<=59)
{
alert("Number grade " + marks + "\n \n" + "Letter grade = F");
}



}
while(marks !=999);
</script>
</head>
<body>
    <main>
    <h1>This page is displayed after the JavaScript is executed</h1>
</main>
</body>
</html>



tml>
<head>
<script>

do {var fahrenheit = prompt("Enter Fahrenheit temperature");
     fahrenheit = parseFloat(fahrenheit);
	 if (fahrenheit>-100 && fahrenheit<+212)
     {var Celsius = (fahrenheit - 32) * (5/9) ;
     Celsius= parseFloat(Celsius);
	 
	 alert("Fahrenheit temperature is " + fahrenheit +  " \n \n " + "Celsius temperature is " + Celsius);
	  }
	  else if (fahrenheit != 999)  
	{
	  alert("you entered " + fahrenheit + "\n " + "Entry must range from -100 to +212" );
	}
	}
	while (fahrenheit != 999)
	
	
	
</script>
<body>
</body>
